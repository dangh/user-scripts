{
  "format_on_save": "on",
  "code_actions_on_format": {
    "source.fixAll": true,
    "source.organizeImports.biome": true
  },
  "formatter": "language_server",
  "languages": {
    "JavaScript": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "biome",
          "arguments": [
            "format",
            "--skip-errors",
            "--stdin-file-path={buffer_path}"
          ]
        }
      },
    }
  }
}
